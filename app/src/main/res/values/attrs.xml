<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientTextView">
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="default_color" format="color|reference" />
        <attr name="changed_color" format="color|reference" />
        <attr name="progress" format="float" />
        <attr name="direction">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircularProgress">
        <attr name="circle_width" format="dimension" />
        <attr name="indeterminate_color" format="color|reference" />
        <attr name="arc_color" format="color|reference" />
        <attr name="start_angle" format="float" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color|reference" />
        <attr name="src" format="reference" />
    </declare-styleable>
    <declare-styleable name="DownloadCircularProgress">
        <attr name="backgroundColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ColorFulSeekbar">
        <attr name="cThumbTint" format="reference" />
        <attr name="cProgressTint" format="color|reference" />
        <attr name="cBackground" format="color|reference" />
        <attr name="cMaxHeight" format="dimension" />
        <attr name="cMinHeight" format="dimension" />
        <attr name="cMaxWidth" format="dimension" />
        <attr name="cMinWidth" format="dimension" />
        <attr name="cMax" format="integer" />
        <attr name="cProgress" format="integer" />
    </declare-styleable>
    <declare-styleable name="ColorSeekbar">
        <attr name="ColorMaxHeight" format="dimension" />
        <attr name="ColorMinHeight" format="dimension" />
        <attr name="ColorBackground" format="color|reference" />
    </declare-styleable>
</resources>