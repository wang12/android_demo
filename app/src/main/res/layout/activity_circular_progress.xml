<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical">

    <com.example.xiaoqiang.myapplication.view.CircularProgress
        android:id="@+id/btn_circular_progress"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:padding="4dp"
        app:arc_color="#ff00ff00"
        app:circle_width="3dp"
        app:indeterminate_color="#99ffffff"
        app:src="@drawable/kts_back_music_download_start"
        app:start_angle="-90"
        app:textColor="#99ffffff"
        app:textSize="16dp" />

    <com.example.xiaoqiang.myapplication.view.DownloadCircularProgress
        android:id="@+id/btn_download_circular_progress"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:padding="4dp"
        app:arc_color="#ff00ff00"
        app:backgroundColor="#ff00ffff"
        app:circle_width="3dp"
        app:indeterminate_color="#99ffffff"
        app:src="@drawable/kts_back_music_download_start"
        app:start_angle="-90"
        app:textColor="#99ffffff"
        app:textSize="16dp" />
</LinearLayout>